<!DOCTYPE html>
<html>
  <head>
    <title>Bookers1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<nav class="navbar navbar-inverse">
        <div class="container relative">
          <div id="slidemenu">
          <div class="slidefont">
          <span><h2>Bookers</h2></span>
          </div>
            <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
             <% if user_signed_in? %>
              <li class="">
              <span class="glyphicon glyphicon-home" aria-hidden="true">
               <%= link_to "Home",user_path(current_user.id) %>
               </li>
               <li class="">
               <span class="glyphicon glyphicon-user" aria-hidden="true">
               <%= link_to "Users",users_path %>
                </li>
                <li class="">
                <span class="glyphicon glyphicon-book" aria-hidden="true">
                 <%= link_to "Books" ,books_path %>
                </li>
                <li class="">
                <span class="lyphicon glyphicon-log-out" aria-hidden="true">
               <%= link_to "logout",destroy_user_session_path, method: :delete %>
               </li>
                <% else %>
               <li class="">
               <span class="glyphicon glyphicon-home" aria-hidden="true">
               <%= link_to "Home",root_path %>
              </li>
             <li class="">
             <span class="glyphicon glyphicon-link" aria-hidden="true">
             <%= link_to "About",home_about_path %>
             </li>
            <li class="">
            <span class="glyphicon glyphicon-edit" aria-hidden="true">
            <%= link_to "Sign up",new_user_registration_path%>
            </li>
            <li class="">
            <span class="glyphicon glyphicon-log-in" aria-hidden="true">
            <%= link_to "login",new_user_session_path %>
            </li>
            </span>
            <% end %>    
          </ul>
        </div>
      </div>
    </nav>

    <body>
    <%= yield %>
  </body>
</html>
