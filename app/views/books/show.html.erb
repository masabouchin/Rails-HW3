<body>
<div class="container">

<div class="succses-bar">
  <% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
 </div>
<div class="container">
<div class="row">
<div class="col-xs-3">
<div class="col-box">
<h2><strong>User info</strong></h2>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
     <table class="userboxs">
              <tr>
                <th>name</th>
                <th class="user-text-headline"><%= @user.name %></th>
                </tr>
                <tr>
                <th>introduction
                <th class="user-body"><%= @user.introduction %></th>
              </tr>
           </table>
        <%= link_to edit_user_path(current_user),class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_16066' do %>
      <% end %>
    </div>

<div class="col-box">
  <h2 class="sidebar-headline"><strong>New book</strong></h2>
      <div class="createbox-contents">
      <%= form_for(@book) do |f| %>
      <div class="errorsbar">
        <% if @book.errors.any? %>
          <h2><%= @book.errors.count %><strong>errors prohibited this book from being saved:</strong></h2>
          <%= @book.errors.full_messages.each do |msg|%><br>
            <%= msg %>
          <% end %>
        <% end %>
        </div>
        <p>Title</p>
        <%= f.text_field :title,class:"col-xs-12 book_title" %>
        <p>Opinion</p>
        <%= f.text_area :body,class:"col-xs-12 book_body" %><br>
        <%= f.submit 'Create Book',class: "btn btn-primary col-xs-12"%>
     <% end %> 
    </div>
  </div>
</div>

<div class="col-xs-9">
  <h2><strong>Book detail</strong></h2>
      <div class="book-box">
          <div class="book-item clearfix">
              <table class="table table-hover table-inverse">
              <thead>
               <tr>
                <th> "Title"</th>
                 <th>Opinion</th>
                  <th colspan="3"></th>
                  </tr>
                  </thead>
                  <tbody>
                  <tr>
                  <td class="image-box"><%= link_to user_path(@userbook.user_id) do%>
                  <%= attachment_image_tag @userbook.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
                  <p><%=@user.name%></p>
                  <%end%></td>
                  <td class="Book-text-headline"><%= link_to book_path(@userbook.id) do  %>
                  <%= @userbook.title%>
                  <% end %></td>
                 <td class="Book-body"><%= @userbook.body %></td>
                 <%if current_user == @user %>
                 <td class="book-item-edit2"><%= link_to "Edit",edit_book_path(@userbook)%></td>
                <td class="book-item-edit3"><%= link_to "Destroy",book_path(@userbook),method: :delete , "data-confirm"=> "Are you sure?" %></td>
                <%end%></td>
             </tr>
             </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>



<footer>
 <div class='container'>
  <div class='row'>
    <div class="footer-box1">
    <p>CopyRight Infratop.inc</p>
    </div>
   </div>
  </div>
</footer>

</div>
</body>
 


