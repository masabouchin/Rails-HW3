<div class= "editbook-screen">
<div class="succses-bar">
  <% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
 </div>

<h1><strong>Editing Book</strong></h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
  <div class="errorsbar">
        <% if @book.errors.any? %>
          <h2><%= @book.errors.count %><strong>errors prohibited this book from being saved:</strong></h2>
          <%= @book.errors.full_messages.each do |msg|%><br>
            <%= msg %>
          <% end %>
        <% end %>
        </div>
  <div class="editing_nav">
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :body %><br>
    <%= f.submit "Update Book", class: "btn btn-primary btn-sm  " %>
<% end %><br>
</div>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %>


